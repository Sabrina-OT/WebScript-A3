<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<link href="../Content/app2.css" rel="stylesheet" type="text/css">

<main class = "container">
    <div class = "row">
        <div class = "offset-md-1 col-md-10">
            <h1><% title %></h1>

            <a href="/tracklist/add" class="btn btn-primary" role="button"><i class="fas fa-plus-circle"></i>Add Task</a>

        <br>
        <table class = "table table-bordered table-striped table-hover">
            <tr class = "d-flex">
                <th class = "text-center col-2">Course</th>
                <th class = "text-center col-2">Task</th>
                <th class = "text-center col-4">Description</th>
                <th class = "text-center col-1">Deadline</th>
            </tr>

            <% for(let count=0;count<TrackList.length;count++) { %>
            <tr class = "d-flex">
                <td class = "text-center col-2"><%= Tracklist[count].Course %></td>
                <td class = "text-center col-2"><%= Tracklist[count].Task %></td>
                <td class = "text-center col-4"><%= Tracklist[count].Description %></td>
                <td class = "text-center col-1"><%= Tracklist[count].Deadline %></td>

                <td class="text-center col-1">
                    <a href="/tracklist/edit/<%= TrackList[count]._id %>" 
                        class="btn btn-primary btn-sm">
                        <i class = "fas fa-pencil-alt"></i>Edit
                        </a>
                </td>

                <td class="text-center col-1">
                    <a href="/tracklist/delete/<%= TrackList[count]._id %>" 
                        class="btn btn-danger btn-sm">
                        <i class = "fas trash-alt"></i>Delete
                        </a>
                </td>
            </tr>
            <% } %>

        </table>
    </div>
    </div>
</main>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>
