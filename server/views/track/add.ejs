<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="courseTextField">Course</label>
                    <input type="text" class="form-control"
                    id="courseTextField"
                    placeholder="Enter the Course"
                    name="Course" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Task</label>
                    <input type="text" class="form-control"
                    id="taskTextField"
                    placeholder="Enter the Task"
                    name="Task" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the book"
                    name="Description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Deadline</label>
                    <input type="text" class="form-control"
                    id="deadlineTextField"
                    placeholder="Enter the Deadline"
                    name="Deadline" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/bookslist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>  

